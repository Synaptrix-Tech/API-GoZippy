generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Driver {
  id             String @id @default(uuid())
  name           String
  email          String @unique
  phone          String
  driver_license String
  license_plate  String
  vehicle_model  String
  photo          String

  @@map("drivers")
}
