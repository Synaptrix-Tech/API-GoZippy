generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  created_at    DateTime  @default(now())
  Address       Address[]

  @@map("users")
}

model Driver {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  phone          String
  password_hash  String
  driver_license String
  license_plate  String
  vehicle_model  String
  photo          String?
  created_at     DateTime @default(now())

  @@map("drivers")
}

model Address {
  id         String  @id @default(uuid())
  user       User    @relation(fields: [userId], references: [id])
  userId     String
  street     String
  city       String
  state      String
  country    String
  zipCode    String
  number     String
  complement String?
  selected   Boolean

  @@map("addresses")
}
