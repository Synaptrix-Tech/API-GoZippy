generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  created_at    DateTime  @default(now())
  Address       Address[]

  @@map("users")
}

model Driver {
  id             String @id @default(uuid())
  name           String
  email          String @unique
  phone          String
  driver_license String
  license_plate  String
  vehicle_model  String
  photo          String

  @@map("drivers")
}

model Address {
  id         String  @id @default(uuid())
  user       User    @relation(fields: [userId], references: [id])
  userId     String
  street     String
  city       String
  state      String
  country    String
  postalCode String
  selected   Boolean

  @@map("addresses")
}
